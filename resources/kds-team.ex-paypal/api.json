{
    "baseUrl": {
        "function": "concat",
        "args": [
            "https://",
            {
                "attr": "domain"
            },
            ".paypal.com/"
        ]
    },
    "authentication": {
        "type": "login",
        "loginRequest": {
            "endpoint": "v1/oauth2/token",
            "method": "FORM",
            "headers": {
                "Content-Type": "application/x-www-form-urlencoded",
                "Authorization": {
                    "function": "concat",
                    "args": [
                        "Basic ",
                        {
                            "function": "base64_encode",
                            "args": [
                                {
                                    "function": "concat",
                                    "args": [
                                        {
                                            "attr": "client_id"
                                        },
                                        ":",
                                        {
                                            "attr": "#client_secret"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            "params": {
                "grant_type": "client_credentials"
            }
        },
        "apiRequest": {
            "headers": {
                "Authorization": {
                    "function": "concat",
                    "args": [
                        "Bearer ",
                        {
                            "response": "access_token"
                        }
                    ]
                }
            }
        }
    },
    "pagination": {
        "method": "pagenum",
        "limit": 20,
        "limitParam": "page_size",
        "pageParam": "page"
    },
    "http": {
        "ignoreErrors": [204]
    }
}